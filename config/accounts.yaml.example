# Email accounts configuration â€” connection info only
# Copy this file to %APPDATA%\email-to-markdown\accounts.yaml (Windows)
# or ~/.config/email-to-markdown/accounts.yaml (Linux/macOS)
#
# Generated automatically by: email-to-markdown import [--extract-passwords]
# Behaviour settings (export dir, quote depth, etc.) go in settings.yaml

accounts:
  - name: Gmail
    server: imap.gmail.com
    port: 993
    username: your.email@gmail.com
    ignored_folders:
      - "[Gmail]/Spam"
      - "[Gmail]/Trash"
      - "[Gmail]/All Mail"
      - "[Gmail]/Drafts"

  - name: Outlook
    server: outlook.office365.com
    port: 993
    username: your.email@outlook.com
    ignored_folders:
      - Junk
      - Deleted Items
